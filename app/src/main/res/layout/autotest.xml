<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="自动化测试 "
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试目录:" />

        <TextView
            android:id="@+id/txtTestPath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="100dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片路径:" />

        <TextView
            android:id="@+id/txtPicPath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试结果保存路径:" />

        <TextView
            android:id="@+id/txtResultPath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="另存为保存路径:" />

        <TextView
            android:id="@+id/txtSaveAsPath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/btnOpenDoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置参数" />

    <Button
        android:id="@+id/btnAddText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自动化测试--插入文字到选区" />

    <Button
        android:id="@+id/btnAddPicToInline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自动化测试--插入图片到选区" />

    <Button
        android:id="@+id/btnAddShapPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自动化测试--插入浮动图片到选区" />

    <Button
        android:id="@+id/btnHandWrite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自动化测试--打开和关闭手绘批注" />

    <Button
        android:id="@+id/btnPasteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自动化测试--粘贴文字" />

    <Button
        android:id="@+id/btnSaveAsDoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自动化测试--另存为文档" />

    <Button
        android:id="@+id/btnTestOpen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自动化测试--打开文档" />

</LinearLayout>